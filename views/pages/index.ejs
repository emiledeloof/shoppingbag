<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Bag</title>
    <link rel="stylesheet" href="../style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="container">
        <nav id="mainNav">
            <a href="pages/new">Artikel Toevoegen</a>
            <a href="pages/settings"><i class="fa-solid fa-gear"></i></a>
            <select name="filter" id="filter" onchange="filter()">
                <option value="all">Alles</option>
                <% stores.forEach(store => { %>
                    <option value="<%= store.store %>"><%= store.store %></option>
                <% }) %>
            </select>
            <form action="pages/done" method="POST">
                <button>Klaar met shoppen</button>
            </form>
        </nav>
        <h3 id="shoppingTitle">Shopping Bag</h3>
        <div class="articlesWrapper">
        <% articles.forEach(article => { %>
            <div class="articles">
                <a href="pages/<%= article.id %>">
                    <h2><%= article.name %></h2>
                    <h4><%= article.quantity %>, <%= article.requestedBy %>, <label class="articleStore"><%= article.store %></label></h4>
                </a>
                <form action="pages/<%=article.id%>?_method=DELETE" method="POST">
                    <button id="deleteButton" class="button">delete</button>
                </form>
            </div>
        <% }) %>
        </div>
    </div>
    <script>
        function filter(e){
            const li = document.querySelectorAll(".articles");
            let articleStore = document.querySelectorAll(".articleStore")
            li.forEach(item => {
                switch(event.target.value){
                    case "all":
                        item.style.display = "";
                        break;
                    // <% stores.forEach(store => { %>
                    case "<%= store.store %>":
                        articleStore.forEach(articleS => {
                            if(articleS.innerText === "<%= store.store %>"){
                                console.log("valid")
                                item.style.display = ""
                            } else{
                                console.log("not valid")
                                item.style.display = "none"
                            }
                        })
                        break;
                    // <% }) %>
                }
            })
        }
    </script>
</body>
</html>