<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Bag</title>
    <link rel="stylesheet" href="../style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="container">
        <nav id="mainNav">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="pages/new"><i class="fa-solid fa-circle-plus"></i> Nieuw</a></li>
                <li>
                    <form action="pages/done" method="POST">
                        <select name="filter" id="filter">
                            <option value="all">Alles</option>
                            <% stores.forEach(store => { %>
                                <option value="<%= store.store %>"><%= store.store %></option>
                                <% }) %>
                        </select>
                        <button><i class="fa-solid fa-circle-check"></i> Klaar</button>
                    </form>
                </li>
                <li><a href="pages/settings"><i class="fa-solid fa-gear"></i></a></li>
            </ul>
        </nav>
        <hr color="black" width="90%" size="0.5px">
        <h3 id="shoppingTitle">Shopping Bag</h3>
        <div class="articlesWrapper">
        <% articles.forEach(article => { %>
            <div class="articles">
                <a href="pages/<%= article.id %>">
                    <h2><%= article.name %></h2>
                    <h4><%= article.quantity %>, <%= article.requestedBy %>, <label class="articleStore"><%= article.store %></label></h4>
                </a>
                <a href="pages/edit/<%= article.id %>"><i class="fa-solid fa-pen-to-square"></i></a>
                <form action="pages/<%=article.id%>?_method=DELETE" method="POST">
                    <button id="deleteButton" class="button"><i class="fa-solid fa-trash-can"></i></button>
                </form>
            </div>
        <% }) %>
        </div>
    </div>
    <script>
        document.addEventListener("change", () => {
            let filter = document.getElementById("filter").value;
            const li = document.querySelectorAll(".articles");
            li.forEach(item => {
                let articleS = item.querySelector(".articleStore");
                switch(filter){
                    case "all":
                        item.style.display = "";
                        break;
                    case "/":
                        if(articleS.innerText === "/"){
                            item.style.display = ""
                        } else{
                            item.style.display = "none"
                        }
                    // <% stores.forEach(store => { %>
                    case "<%= store.store %>":
                        if(articleS.innerText === "<%= store.store %>"){
                            item.style.display = ""
                        } else{
                            item.style.display = "none"
                        }
                        break;
                    // <% }) %>
                }
            })
        })
    </script>
</body>
</html>